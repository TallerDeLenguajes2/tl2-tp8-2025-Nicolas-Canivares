@using TiendaDB
@model List<Presupuestos>
<article class="d-flex align-items-center justify-content-between">
    <h1 class="text-light">Listado Productos</h1>
    <a class="text-decoration-none fst-normal link-light" asp-controller="Productos" asp-action="Create">
    <button class="btn btn-primary">
        Crear
    </button></a>
</article>
<table class="table table-dark table-striped table-hover table-bordered text-center align-middle mt-2">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Presupuestos presupuesto in Model)
        {
            <tr>
                <td scope="row">@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion1</td>
                <td>
                @* <td class="flex-grow-1 d-flex align-items-center justify-content-center"> *@
                @* <td class="d-flex align-content-md-around flex-wrap"> *@
                    <button class="btn btn-info m-2">
                        <a class="text-decoration-none fst-normal link-light" asp-area="" asp-controller="Productos"
                            asp-action="Edit" asp-route-idProducto="@presupuesto.IdPresupuesto">Editar</a>
                    </button>
                    <button class="btn btn-danger m-2">
                        <a class="text-decoration-none fst-normal link-light" asp-area="" asp-controller="Productos"
                            asp-action="Delete" asp-route-idProducto="@presupuesto.IdPresupuesto">Borrar</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>