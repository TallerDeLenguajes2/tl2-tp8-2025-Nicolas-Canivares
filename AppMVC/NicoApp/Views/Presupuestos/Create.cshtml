@using NicoApp.ViewModels;
@model NicoApp.ViewModels.PresupuestoViewModel

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<form asp-controller="Presupuestos" asp-action="Create" method="post" class="text-light">
    <h1>ALTA PRESUPUESTO</h1>
    <hr>
    <div class="form-group mt-2">
        <label asp-for="NombreDestinatario">Nombre Destinatario</label>
        <input asp-for="NombreDestinatario" class="form-control bg-light" 
            placeholder="Nicolas">
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="FechaCreacion">Fecha</label>
        <input asp-for="FechaCreacion" class="form-control bg-light" placeholder="100">
        <span asp-validation-for="FechaCreacion" class="Text-danger"></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
    <button class="btn btn-light mt-3"><a asp-controller="Presupuestos" asp-action="Index" class="text-decoration-none fst-normal link-dark" >Volver</a></button>
    <button type="submit" class="btn btn-primary mt-3">Crear Presupuesto</button>
    </div>
</form>

@section Scripts{
    <partial name= "_ValidationScriptsPartial"/>
}