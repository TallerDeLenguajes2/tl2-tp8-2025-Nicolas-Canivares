
@model NicoApp.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}


<form asp-controller="Productos" asp-action="Edit" method="post" class="text-light">
    <h1>EDITAR PRODUCTO</h1>
    <hr>
    <input asp-for="IdProducto" type="hidden" />
    <div class="form-group mt-2">
        <label asp-for="Descripcion">Nombre Producto</label>
        <input asp-for="Descripcion" type="text" class="form-control" 
            placeholder="Manzana">
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" type="number" class="form-control" placeholder="100">
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
    <button class="btn btn-light mt-3"><a asp-controller="Productos" asp-action="Index" class="text-decoration-none fst-normal link-dark" >Volver</a></button>
    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}