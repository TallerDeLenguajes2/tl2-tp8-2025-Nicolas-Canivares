@using NicoApp.ViewModels;
@model NicoApp.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<form asp-controller="Productos" asp-action="Create" method="post" class="text-light">
    <h1>ALTA PRODUCTO</h1>
    <hr>
    <div class="form-group mt-2">
        <label asp-for="Descripcion">Nombre Producto</label>
        <input asp-for="Descripcion" class="form-control bg-light" 
            placeholder="Manzana">
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control bg-light" placeholder="100">
        <span asp-validation-for="Precio" class="Text-danger"></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
    <button class="btn btn-light mt-3"><a asp-controller="Productos" asp-action="Index" class="text-decoration-none fst-normal link-dark" >Volver</a></button>
    <button type="submit" class="btn btn-primary mt-3">AÃ±adir Productos</button>
    </div>
</form>

@section Scripts{
    <partial name= "_ValidationScriptsPartial"/>
}